<div class="container">
    <div class="row">
        <div class="col">
            <nav class="navbar navbar-dark bg-dark">
                <a class="navbar-brand" href="#">
                    <img src="/assets/images/paper-plane.png" width="30" height="30" class="d-inline-block align-top" alt="">
                    Not the FAA
                </a>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <span class="navbar-text">
                            Logged in as: <em>(current user)</em>
                        </span>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Logout</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table table-striped table-dark">
                <thead>
                    <tr>
                    <th scope="col">PIC Number</th>
                    <th scope="col">Flight Plan</th>
                    <th scope="col">Date Submitted</th>
                    <th scope="col">Approval Status</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each flightPlans}}
                    <tr>
                        <td>{{PICnumber}}</td>
                        <td>{{flightPlanType}}</td>
                        <td>{{timeSubmitted}}</td>
                        <td>{{approvalStatus}}</td>
                    </tr>                    
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>